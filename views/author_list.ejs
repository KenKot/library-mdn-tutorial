<div class="content">
  <h1><%= title %></h1>

  <ul>
    <% if (author_list && author_list.length) { author_list.forEach(author => {
    %>
    <li>
      <a href="<%= author.url %>"><%= author.name %></a>
      <% if (author.date_of_birth) { %> (<%= formatDate(author.date_of_birth) %>
      - <%= author.date_of_death ? formatDate(author.date_of_death) : 'Present'
      %>) <% } %>
    </li>
    <% }); %> <% } else { %>
    <li>There are no authors.</li>
    <% } %>
  </ul>
</div>

<% function formatDate(date) { const options = { year: 'numeric', month: 'long',
day: 'numeric' }; return new Date(date).toLocaleDateString('en-US', options); }
%>
